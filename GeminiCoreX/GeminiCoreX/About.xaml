<Page x:Class="GeminiCoreX.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeminiCoreX"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="580"
      Title="About"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">


    <Grid>
        <Grid Margin="20" Height="82" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="82">
                <Grid>
                    <Image x:Name="WIMG" Height="75" Width="123"/>
                    <Rectangle Stroke ="Black" Height="80" Width="128" StrokeThickness="5" RadiusX="8" RadiusY="8"/>
                </Grid>
                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                    <Label Content="Unkown PC Nmae" FontWeight="Bold" FontSize="22" x:Name="LPCName"/>
                    <Label Content="Unkown CPU" FontWeight="Light" FontSize="12" x:Name="LCPUInfo"/>
                    <Label Content="--GB RAM" FontWeight="Light" FontSize="12" x:Name="LRAMInfo"/>
                </StackPanel>
            </StackPanel>

        </Grid>

        <Button Background="Transparent" BorderBrush="Transparent" Margin="10,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="560" HorizontalContentAlignment="Left">
            <StackPanel Height="42" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.System}" Margin="0,5,10,5"/>

                <StackPanel VerticalAlignment="Center">
                    <Label Content="Windows 版本" FontSize="12"/>
                    <Label Content="Unkown" FontSize="10" FontWeight="Light" x:Name="LWinVer"/>
                </StackPanel>
            </StackPanel>
        </Button>

        <Button Background="Transparent" BorderBrush="Transparent" Margin="10,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="560" HorizontalContentAlignment="Left">
            <StackPanel Height="42" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.CircleRing}" Margin="0,5,10,5"/>

                <StackPanel VerticalAlignment="Center">
                    <Label Content="YuanZiEOS 版本" FontSize="12"/>
                    <Label Content="Unkown" FontSize="10" FontWeight="Light" x:Name="LYZEVer"/>
                </StackPanel>
            </StackPanel>
        </Button>

        <Button Background="Transparent" BorderBrush="Transparent" Margin="10,240,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="560" HorizontalContentAlignment="Left" Click="Button_Click">
            <StackPanel Height="42" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.SmartcardVirtual}" Margin="0,5,10,5"/>

                <StackPanel VerticalAlignment="Center">
                    <Label Content="GPU 列表" FontSize="12"/>
                    <Label Content="展开" FontSize="10" FontWeight="Light"/>
                </StackPanel>
            </StackPanel>
        </Button>
    </Grid>
</Page>
