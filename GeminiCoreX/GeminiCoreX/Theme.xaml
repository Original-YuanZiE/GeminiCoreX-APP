<Page x:Class="GeminiCoreX.Theme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeminiCoreX"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="580"
      Title="Theme"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">

    <Grid>
        <StackPanel>
            <Label Content="文件资源管理器" Margin="20,20,20,0"/>
            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="20,5,20,0" Click="Button_Click_1">
                <Grid Height="42" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Folder}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Label Content="自定义文件夹轮播背景图片" VerticalAlignment="Center"/>
                        <Label Content="点此可打开轮播图片文件夹，可按喜好增删图片" FontSize="11" FontWeight="Light"/>
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" OnContent="" OffContent="" x:Name="ExpBGSW" Toggled="ExpBGSW_Toggled"/>
                </Grid>
            </Button>
            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="20,5,20,0" Click="Button_Click_2">
                <Grid Height="42" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.NewWindow}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Label Content="为文件资源管理器启用模糊" VerticalAlignment="Center"/>
                        <Label Content="超绝模糊； 点此编辑配置文件以切换不同模糊" FontSize="11" FontWeight="Light"/>
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" OnContent="" OffContent="" x:Name="AcrylicSW" Toggled="AcrylicSW_Toggled"/>
                </Grid>
            </Button>
            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="20,5,20,0">
                <Grid Height="42" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Refresh}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Label Content="重启文件资源管理器" VerticalAlignment="Center"/>
                        <Label Content="设置更改完成后请重启资源管理器以保证生效哦~" FontSize="11" FontWeight="Light"/>
                    </StackPanel>
                    <Button Content="重启" FontSize="11" Grid.Column="2" Click="Button_Click"/>
                </Grid>
            </Button>
            <Label Content="文件资源管理器美化由枫 の 主题社提供技术支持" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,5,20,0"/>
            <Label Content="任务栏与开始" Margin="20,0,20,0"/>
            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="20,5,20,0" Click="Button_Click_2">
                <Grid Height="42" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.GripperBarHorizontal}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Label Content="TranslucentTB" VerticalAlignment="Center"/>
                        <Label Content="任务栏美化由 TranslucentTB 提供支持，可在系统托盘找到它的图标进行自定义" FontSize="11" FontWeight="Light"/>
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" OnContent="" OffContent="" x:Name="TTBSW" Toggled="TTBSW_Toggled"/>
                </Grid>
            </Button>
            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="20,5,20,0" Click="Button_Click_2">
                <Grid Height="42" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.TaskView}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Label Content="TranslucentSM" VerticalAlignment="Center"/>
                        <Label Content="开始菜单模糊由 TranslucentSM 提供支持，可点击开始菜单下方的“笔”图标进行自定义" FontSize="11" FontWeight="Light"/>
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" OnContent="" OffContent="" x:Name="TSMSW" Toggled="TSMSW_Toggled"/>
                </Grid>
            </Button>
        </StackPanel>
        
    </Grid>
</Page>
